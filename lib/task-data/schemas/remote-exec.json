{
   "$schema": "rackhd-task-schema.json",
   "copyright": "Copyright 2017, DELL EMC, Inc.",
   "title": "Remote Execute Command",
   "description": "The schema for executing command remotely",
   "describeJob": "Job.Remote.Exec",
   "allOf": [
       { "$ref": "common-task-options.json#/definitions/Options" },
       {
           "type": "object",
           "properties": {
                "command": {
                   "description": "Command to be executed remotely",
                   "type": "string"
                },
                "username": {
                   "description": "Remote host username",
                   "type": "string"
                },
                "password": {
                   "description": "Remote host password",
                   "type": "string"
                },
                "host": {
                   "description": "Remote host IP address",
                   "type": "string"
                }
            },
           "required": [
               "command", "username", "password", "host"
            ]
       }
   ]
}
